<!DOCTYPE html>
<html lang="fr">
<head>
  <%- include("partials.ejs/head") %>
</head>
<body>
   <%- include("partials.ejs/nav.ejs") %>
    <div class="container">
      <div class="row mt-4">
        <div class="col">
          <a href="/albums">&lt;retour </a>
          <h1 class="mb-4">
           <%= title %>
          </h1>
        </div>
      </div>
      <div class="div row mb-4">
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                Ajouter une image
              </h5>
             <form
              name="image"
              method="POST"
              action="/albums/<%= albumItem.id %>/images"
              enctype="multipart/form-data">
              <input type="file" name="image" class="form-control-file">
            <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
            </form>
            <% if (errors.length){ %>
                    <div class="alert alert-danger mt-4 mb-2" role="alert">
                        <%= errors[0] %>
                    </div>
               <% } %>
            </div>
          </div>
        </div>
      </div>
      <div class="row row-cols-1 row-cols-md-4 g-4">

        <% albumItem.images.forEach((image,index) => { %>
          <div class="col">
        <div class="card">
          <img src="/uploads/<%=albumItem.id%>/<%= image %>" alt="<%= image %>" class="card-img-top">
          <div class="card-body">
            <h5> <%= image %> </h5>
            <a href="/albums/<%=albumItem.id%>/delete/<%=index %>">Supprimer</a>
          </div>
        </div>
        </div>
       <% }); %>

      </div>
    </div>
  <%- include("partials.ejs/script") %>
</body>
</html>